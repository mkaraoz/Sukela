<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.bok.mk.sukela"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.YearListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>
        <activity android:name=".ui.UserListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>
<!--        <activity android:name=".ui.SelectArchiveActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>-->
        <activity android:name=".ui.entryscreen.YearEntryScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.YearListActivity"/>
        </activity>

        <provider
            android:name=".data.EntryProvider"
            android:authorities="org.bok.mk.sukela.provider"
            android:exported="false"/>

        <activity
            android:name=".ui.SettingsActivity"
            android:launchMode="singleTop">
        </activity>
        <activity android:name=".ui.entryscreen.EksiEntryScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>
        <activity android:name=".ui.entryscreen.InstelaEntryScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>
        <activity android:name=".ui.entryscreen.UludagEntryScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>
        <activity android:name=".ui.entryscreen.InciEntryScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>
        <activity android:name=".ui.entryscreen.UserEntryScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.UserListActivity"/>
        </activity>
        <activity android:name=".ui.DeleteAllSavedEntriesActivity">
        </activity>
        <activity
            android:name=".ui.entryscreen.SavedEntryScreenActivity">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity"/>
        </activity>
        <activity
            android:name=".ui.SearchResultsActivity"
            android:exported="false"
            android:label="@string/title_activity_search_results"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.entryscreen.SavedEntryScreenActivity"/>
        </activity>
    </application>

</manifest>